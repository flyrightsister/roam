<% include partials/header %>
<% include partials/nav %>

<a href="edit-profile/<%= user_id %>"<button class="edit-profile">Edit Profile</button></a>
<h1>
  Hello,
  <% if(name) { %>
     <%= name %>
     <% } %>
</h1>

<p>
  Member since:
  <% if(member_since) { %>
     <%= moment(member_since).format('MMMM YYYY') %>
     <% } %>
</p>

<p>
  <% if(collection) { %>
    <ul>
        <% collection.forEach(function(blog) { %>
            <a href="/profile/<%= user_id %>/<%= blog.id %>"><li><%= blog.title %></li></a>
        <% }); %>
    </ul>
     <% } %>
</p>



<% include partials/footer %>
